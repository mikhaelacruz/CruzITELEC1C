@{
}

@model Instructor;


<h2>Are you sure you want to delete?</h2>


<form method="post" asp-action="Delete" asp-controller="instructor" class='p-2 row gx-3 gy-2 align-items-center'>
    <div class="form-group">
        <label asp-for="InstructorId"> Instructor ID</label>
        <input class="form-control" asp-for="InstructorId" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="InstructorFirstName">Enter First Name</label>
        <input class="form-control" asp-for="InstructorFirstName" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="InstructorLastName">Enter Email</label>
        <input class="form-control" asp-for="InstructorLastName" readonly/>
    </div>
    <div class="form-group">
        <label class="input-group-text" asp-for="IsTenured">Instructor Tenured</label>
        <input class="form-check-input" asp-for="IsTenured" readonly>

    </div>
    <div class="form-group">
        <label class="input-group-text" asp-for="Rank">Instructor Rank</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Rank))" asp-for="Rank" readonly>
        </select>

    </div>
    <div class=" form-group">
        <label asp-for="DateHired">Date Enrolled</label>
        <input asp-for="DateHired" class="form-control" readonly/>
    </div>

    <button type="button" onclick="history.back()" class="btn btn-secondary p-20">Cancel</button>
    <button type="submit" class="btn btn-primary p-20">Delete</button>

</form>