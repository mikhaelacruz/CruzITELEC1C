@{
}

@model IEnumerable<CruzITELEC1C.Models.Instructor>

<h1>Instructor View</h1>

<table class="table table-dark">
    <tr>
        <th>ID:</th>
        <th>Name: </th>
        <th>IsTenured: </th>
        <th>Email: </th>
        <th>Rank: </th>
        <th>Date Hired: </th>
        <th>Details:</th>
    </tr>

    @foreach(var Instructor in Model)
    {
        <tr>
            <td>@Instructor.InstructorId</td>
            <td>@Instructor.InstructorFirstName @Instructor.InstructorLastName</td>
            <td>@Instructor.IsTenured</td>
            <td>@Instructor.InstructorEmail</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.DateHired</td>
            <td><a asp-action="ShowDetails" asp-route-id="@Instructor.InstructorId">Show Details</a></td>
        </tr>
        
    }
</table>