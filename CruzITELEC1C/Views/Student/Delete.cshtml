@{
}

@model Student;



<h2>Are you sure you want to delete?</h2>


<form method="post" asp-action="Delete" asp-controller="Student"  class='p-2 row gx-3 gy-2 align-items-center'>
    <div class="form-group"> 
        <label asp-for="StudentId">Student ID</label>
        <input class="form-control" asp-for="StudentId" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="StudentName">Enter StudentName</label>
        <input class="form-control" asp-for="StudentName" readonly/> 
    </div>
    <div class="form-group">
        <label asp-for="StudentEmail">Enter Email</label>
        <input class="form-control" asp-for="StudentEmail" readonly/>
    </div>
    <div class="form-group">

        <label class="input-group-text" asp-for="Course">Enter Course</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="Course" readonly/>
        </select>

    </div>
    <div class=" form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input asp-for="DateEnrolled" class="form-control" readonly/>
    </div>
    <button type="button" onclick="history.back()" class="btn btn-secondary p-20">Cancel</button>
    <button type="submit" class="btn btn-primary p-20">Delete</button>

</form>