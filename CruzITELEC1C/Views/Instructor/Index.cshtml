@{
}

@model IEnumerable<CruzITELEC1C.Models.Instructor>

<h1>Instructor View</h1>

<table class="table table-dark">
    <tr>
        <th>ID</th>
        <th>First Name </th>
        <th>Last Name </th>
        <th>Tenured </th>
        <th>Rank </th>
        <th>Date Hired </th>
        <th>Show Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @{
        foreach (var Instructor in Model)
        {
            <tr>
                <td>@Instructor.InstructorId</td>
                <td>@Instructor.InstructorFirstName</td>
                <td>@Instructor.InstructorLastName</td>
                <td>
                    @{

                        if (@Instructor.IsTenured == true)
                        {
                            <span>Full-Time</span>
                        }
                        else
                        {

                            <span>Part-Time</span>
                        }
                    }
                </td>
                <td>@Instructor.Rank</td>
                <td>@Instructor.DateHired</td>
                <td>
                    <a asp-action="ShowDetails" asp-route-id="@Instructor.InstructorId" class="btn btn-primary">Show Details</a>
                </td>
                <td>
                    <a asp-action="UpdateInstructor" asp-route-id="@Instructor.InstructorId" class="btn btn-primary">Update</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@Instructor.InstructorId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="AddInst">Add Instructor</a>
