@using CruzITELEC1C.Models;
@{
    //use viewbag to get data from controller to view
}
<h1> Student List</h1>
<table class="table table-dark">
    <tr>
        <th>Name</th>
        <th>Course</th>
        <th>Date Enrolled</th>
        <th>Details</th>
    </tr>
   
    @foreach(var Student in Model) {
        <tr>
            <th>@Student.StudentName </th>
            <th>@Student.Course</th>
            <th>@Student.DateEnrolled</th>
            <th><a asp-action="ShowDetails" Show Details"></a></th>
        </tr>
    }
    </table>